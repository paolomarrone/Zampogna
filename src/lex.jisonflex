integer 					'0' | [1-9] [0-9]*
e 							[eE] ('+'|'-')?[0-9]+
float						{integer}("."[0-9]+)?{e}?
id                          [_a-zA-Z][_a-zA-Z0-9]*

%%
"#"[^\n\r]*					/* inline comment */
"..."[^\n^\n]*[\n\r]+		/* pause comment */
"="                         return 'ASSIGN';
"{"                         return 'LBRACE';
"}"                         return 'RBRACE';
{float}						return 'NUMBER';
"fs"						return 'SAMPLERATE';
{id}                        return 'ID';
"+"                         return 'PLUS';
"-"                         return 'MINUS';
"*"                         return 'TIMES';
"/"							return 'DIV';
"("                         return 'LPAREN';
")"                         return 'RPAREN';
","							return 'COMMA';
"@"							return 'INIT';
[\n\r]						return 'END';
[;]+						return 'END';

[ \t]+                       /* skip whitespace */